# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration - Kết nối với ShoeStore database
DB_HOST=localhost
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=12                 # Thay bằng password SQL Server của bạn
DB_NAME=ShoeStore              # Tên database bạn đã tạo

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_123456
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_123456
JWT_REFRESH_EXPIRE=30d

# Redis Configuration (optional - comment out nếu chưa cài Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Frontend URL
CLIENT_URL=http://localhost:3000

# API Keys
CHATBOT_API_KEY=your_chatbot_api_key